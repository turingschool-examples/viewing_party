<%= button_to "Top Rated Movies", movies_path, params: { top_movies: true }, method: :get, class: "btn btn-outline-primary btn-lg"  %>

<%= form_with url: movies_path, method: :get, local: true do |f| %>

  <div class="pt-5">
    <h2>Search By Movie Title</h2>
  </div>

  <div class="mb-3">
    <%= f.text_field :movie_name, class: "form-control", placeholder: "Pulp Fiction" %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Search Movies", class: "btn btn-primary"%>
  </div>

<% end %>
