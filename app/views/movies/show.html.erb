<div class="bg-image d-flex justify-content-center align-items-center"
    style="background-image: url('https://mdbcdn.b-cdn.net/img/new/fluid/nature/015.jpg');
          height: 200vh; width: 100vw;"
    >
<div class="search_block">

<%= button_to "Create Viewing Party for Movie", new_party_path(), method: :get, params: {:title=> @movie.title, :movie_id=> @movie.id, :duration=> @movie.runtime, :poster_path => @movie.poster_path}%>

<section id="movie_info">
  <h1>Movie title:<%= @movie.title%></h1>
<td style="text-align: center"><img src="https://image.tmdb.org/t/p/w200<%=@movie.poster_path%>" alt="<%= @movie.title %>" style="max-height: 500px; max-width: 500px"></td>
  <% @movie.genres.each do |gen|%>
    <p> Genres: <%= gen[:name] %> </p>
  <% end %>
  <p>This Movie is <%=@movie.runtime_hours %> hours and <%= @movie.runtime_mins %> minutes</p>
  <p> Average_Rating: <%= @movie.vote_average%></p>
  <p> Summary: <%= @movie.overview%></p>
</section>

<section id="movie_cast">
  <p>Actors and Actresses</p>
  <% @movie.cast.each do |name|%>
  <p><%= name[:name]%> as <%= name[:character]%> <%= button_to "Other movies with #{name[:name]}", cast_path(name[:id]), params: [name: name[:name]], method: :get %></p>
  <% end%>
</section>

<section id="movie_reviews">
  <p> <%= @movie.reviews.count %> Reviews</p>
  <p><%@movie.reviews.each do |review| %>  </p>
    <p> Author:<%= review[:author] %></p>
    <p> Review: <%= review[:content] %></p>
  <% end %>
</section>

</div>
</div>
