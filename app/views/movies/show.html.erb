<p><%= button_to 'Create Viewing Party', "/party/new", method: :get %></p>

<h1><%= @movie[:title] %></h1>

<h2>Details:</h2>
<p>Vote Average: <%= @movie[:vote_average] %></p>
<p>Runtime: <%= @runtime %></p>
<p>Genres:</p>
<% @movie[:genres].each do |genre| %>
  <%= genre[:name] %>
<% end %>

<h2>Description:</h2>
<p><%= @movie[:overview] %></p>

<h2>Actors: </h2>
<% @actors.each do |actor| %>
  <p><%= actor[:name] %> as <%= actor[:character] %></p>
<% end %>

<h2>Reviews: </h2>
<h3>Total Reviews: <%= @reviews.count %></h3>
<h4>Review Authors:</h4>
<% @reviews.each do |review_detail| %>
  <p><%= review_detail[:author] %></p>
<% end %>

<h2>New York Times Review Link:</h2>
<% if !@nyt_review[0].nil? %>
  <p><%=  link_to @nyt_review[0].headline, "#{@nyt_review[0].url}" %></p>
<% else %>
  <p>The New York Times has not reviewed this film</p>
<% end %>
